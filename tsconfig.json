{
  "compilerOptions": {
  "strictPropertyInitialization": false,
    "target": "ES2020",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noEmit": true,

    // ðŸ”§ AdiÃ§Ãµes essenciais:
    "baseUrl": ".", 
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": ["main.ts", "src/**/*.ts"]
}
